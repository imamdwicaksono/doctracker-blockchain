{
    "swagger": "2.0",
    "info": {
        "description": "REST API for internal document blockchain tracking system",
        "title": "Document Tracker API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/checkpoint/complete": {
            "post": {
                "description": "Mark a checkpoint as completed by uploading evidence",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Checkpoints"
                ],
                "summary": "Complete a checkpoint with evidence",
                "parameters": [
                    {
                        "description": "Checkpoint Status Input",
                        "name": "checkpoint",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.CheckpointStatusInput"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/trackers": {
            "get": {
                "description": "Retrieve all trackers",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Trackers"
                ],
                "summary": "Get all document trackers",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Tracker"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Create a tracker with initial checkpoints",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Trackers"
                ],
                "summary": "Create a new document tracker",
                "parameters": [
                    {
                        "description": "Tracker payload",
                        "name": "tracker",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.Tracker"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Tracker"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/trackers/address/{address}": {
            "get": {
                "description": "Retrieve all trackers initiated by a specific address",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Trackers"
                ],
                "summary": "Get trackers by wallet address",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Wallet address",
                        "name": "address",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Tracker"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/trackers/{id}": {
            "get": {
                "description": "Retrieve tracker using its ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Trackers"
                ],
                "summary": "Get a tracker by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Tracker ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Tracker"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Checkpoint": {
            "type": "object",
            "properties": {
                "address": {
                    "description": "auto-generated",
                    "type": "string"
                },
                "company": {
                    "description": "only if external",
                    "type": "string"
                },
                "completed_at": {
                    "type": "integer"
                },
                "email": {
                    "type": "string"
                },
                "encrypted_note": {
                    "type": "string"
                },
                "evidence_hash": {
                    "type": "string"
                },
                "evidence_path": {
                    "type": "string"
                },
                "is_completed": {
                    "type": "boolean"
                },
                "is_view": {
                    "description": "if true, can decrypt Note",
                    "type": "boolean"
                },
                "note": {
                    "description": "original (optional)",
                    "type": "string"
                },
                "role": {
                    "description": "signer / courier",
                    "type": "string"
                },
                "type": {
                    "description": "internal / external",
                    "type": "string"
                }
            }
        },
        "models.CheckpointStatusInput": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "evidence": {
                    "description": "base64 encoded image",
                    "type": "string"
                },
                "note": {
                    "type": "string"
                },
                "tracker_id": {
                    "type": "string"
                }
            }
        },
        "models.Tracker": {
            "type": "object",
            "properties": {
                "checkpoints": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.Checkpoint"
                    }
                },
                "created_at": {
                    "type": "integer"
                },
                "creator": {
                    "type": "string"
                },
                "creator_address": {
                    "type": "string"
                },
                "encrypted_notes": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "id": {
                    "type": "string"
                },
                "privacy": {
                    "type": "string"
                },
                "status": {
                    "description": "pending, progress, complete",
                    "type": "string"
                },
                "target_end": {
                    "description": "self / email / address",
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            }
        }
    }
}